{
  "name": "studio",
  "private": true,
  "version": "1.0.0",
  "main": "package.json",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "bun run sanity dev",
    "format": "bun run prettier --write .",
    "start": "bun run sanity start",
    "lint": "bun run eslint .",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' bun run sanity build",
    "deploy": "NODE_OPTIONS='--max-old-space-size=8192' bun run sanity deploy",
    "type": "bun run sanity schema extract --enforce-required-fields && bun run sanity typegen generate",
    "check-types": "bun run tsc --noEmit",
    "migrate:denormalize": "bun run scripts/migrate-denormalized-fields.ts",
    "migrate:denormalize:dry": "bun run scripts/migrate-denormalized-fields.ts --dry-run --verbose"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@sanity/assist": "^5.0.2",
    "@sanity/embeddings-index-ui": "^3.0.0",
    "@sanity/icons": "^3.7.4",
    "@sanity/orderable-document-list": "^1.4.0",
    "@sanity/portable-text-editor": "^3.48.1",
    "@sanity/sdk-react": "^2.8.0",
    "@sanity/ui": "^3.1.11",
    "@sanity/vision": "^5.1.0",
    "classnames": "^2.5.1",
    "lodash.debounce": "^4.0.8",
    "lodash.get": "^4.4.2",
    "lucide-react": "^0.539.0",
    "nanoid": "^5.1.6",
    "pluralize": "^8.0.0",
    "react": "^19.2.2",
    "react-dom": "^19.2.2",
    "react-error-boundary": "^6.1.0",
    "react-portable-text": "^0.6.0",
    "sanity": "^5.1.0",
    "sanity-plugin-bulk-actions-table": "^1.0.4",
    "sanity-plugin-icon-picker": "^4.0.0",
    "sanity-plugin-media": "^3.0.3",
    "slugify": "^1.6.6",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@portabletext/block-tools": "^1.1.31",
    "@sanity/eslint-config-studio": "^5.0.2",
    "@sanity/schema": "^4.13.0",
    "@supercharge/promise-pool": "^3.2.0",
    "@types/jsdom": "^21.1.7",
    "@types/lodash.debounce": "^4.0.9",
    "@types/lodash.get": "^4.4.9",
    "@types/node": "^24.3.0",
    "@types/pluralize": "^0.0.33",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^26.1.0"
  }
}
