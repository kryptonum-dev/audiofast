{
  "name": "studio",
  "private": true,
  "version": "1.0.0",
  "main": "package.json",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "bun run sanity dev",
    "format": "bun run prettier --write .",
    "start": "bun run sanity start",
    "lint": "bun run eslint .",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' bun run sanity build",
    "deploy": "NODE_OPTIONS='--max-old-space-size=8192' bun run sanity deploy",
    "type": "bun run sanity schema extract --enforce-required-fields && bun run sanity typegen generate",
    "check-types": "bun run tsc --noEmit"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@sanity/assist": "^5.0.2",
    "@sanity/icons": "^3.7.4",
    "@sanity/orderable-document-list": "^1.4.0",
    "@sanity/ui": "^3.1.11",
    "@sanity/vision": "^4.13.0",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-portable-text": "^0.6.0",
    "sanity": "^4.13.0",
    "sanity-plugin-icon-picker": "^4.0.0",
    "sanity-plugin-media": "^3.0.3",
    "slugify": "^1.6.6",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@portabletext/block-tools": "^1.1.31",
    "@sanity/eslint-config-studio": "^5.0.2",
    "@sanity/schema": "^4.13.0",
    "@supercharge/promise-pool": "^3.2.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^26.1.0"
  }
}
